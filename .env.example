# General settings
SYSTEM_USER=timemachine
SYSTEM_GROUP=timemachine
SYSTEM_UID=1000
SYSTEM_GID=1000
TM_SHARE=Data
TM_HOST=192.168.1.101
TM_USER=TimeCapsule
TM_PASS=MYPASSWORD
VOLUME_SIZE_LIMIT=0

# Disable the internal SMB/AFP server; this only mounts upstream
SERVER_ENABLED=true

# macvlan network configuration for external SMB 
# Adjust to match your LAN; defaults assume 192.168.1.0/24 with gateway .1
MACVLAN_PARENT=eth0
MACVLAN_SUBNET=192.168.1.0/24
MACVLAN_GATEWAY=192.168.1.1
MACVLAN_IP_RANGE=192.168.1.0/24
# Static IP to assign to the SMB container on the macvlan network
TIMEMACHINE_IP=192.168.1.250
